#                         Cerro Alto NMDS                                      #
################################################################################
head(meta_mirador)
head(taxa_cerro_A)


Plant_Invasiveness <-meta_data$Plant_Invasiveness
Plant <- meta_data$Plant


#transposing columns 'cause vegan likes it that way
t_otus <- as.data.frame(t(taxa_cerro_A))
